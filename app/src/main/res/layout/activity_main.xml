<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="24dp"
            android:layout_centerInParent="true"
            android:backgroundTint="#FFFFFF"
            app:cardElevation="16dp"
            app:cardCornerRadius="16dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:textColor="#212121"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:text="Welcome Visitor"
                    android:background="#FFC107"
                    android:gravity="center"
                    android:translationZ="10dp"
                    android:animation="@anim/slide_in_from_top" />

            <TextView
                    android:id="@+id/timerTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#212121"
                    android:padding="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="#FFC107"
                    android:gravity="center"
                    android:translationZ="10dp"
                    android:animation="@anim/slide_in_from_top" />

            <Button
                    android:id="@+id/dateFilterButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Select Date"
                    android:layout_marginTop="20dp" />

            <TextView
                    android:id="@+id/totalAmountTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:animation="@anim/slide_in_from_top"/>

            <TextView
                    android:id="@+id/creditedAmountTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:animation="@anim/slide_in_from_top"/>

            <TextView
                    android:id="@+id/debitedAmountTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:animation="@anim/slide_in_from_top"/>

            <TextView
                    android:id="@+id/seperatortTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="-------------------------------------"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:animation="@anim/slide_in_from_top"/>


            <TextView
                    android:id="@+id/logTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textColor="#212121"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:animation="@anim/slide_in_from_top"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
